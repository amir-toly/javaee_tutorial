<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>DatabaseToSessionFilter</filter-name>
		<filter-class>com.sdzee.filters.DatabaseToSessionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DatabaseToSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>com.sdzee.config.DAOFactoryInitialization</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>CustomerController</servlet-name>
		<servlet-class>com.sdzee.servlets.CustomerController</servlet-class>
		<init-param>
			<param-name>path</param-name>
			<param-value>/tmp/sdzee/files/</param-value>
		</init-param>
		<multipart-config>
			<location>/tmp/sdzee/</location>
			<max-file-size>1048576</max-file-size>
			<max-request-size>1048576</max-request-size>
			<file-size-threshold>1048576</file-size-threshold>
		</multipart-config>
	</servlet>
	<servlet>
		<servlet-name>OrderController</servlet-name>
		<servlet-class>com.sdzee.servlets.OrderController</servlet-class>
		<init-param>
			<param-name>path</param-name>
			<param-value>/tmp/sdzee/files/</param-value>
		</init-param>
		<multipart-config>
			<location>/tmp/sdzee/</location>
			<max-file-size>1048576</max-file-size>
			<max-request-size>1048576</max-request-size>
			<file-size-threshold>1048576</file-size-threshold>
		</multipart-config>
	</servlet>
	<servlet>
		<servlet-name>CustomersListController</servlet-name>
		<servlet-class>com.sdzee.servlets.CustomersListController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OrdersListController</servlet-name>
		<servlet-class>com.sdzee.servlets.OrdersListController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CustomerDeleteController</servlet-name>
		<servlet-class>com.sdzee.servlets.CustomerDeleteController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OrderDeleteController</servlet-name>
		<servlet-class>com.sdzee.servlets.OrderDeleteController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownloadController</servlet-name>
		<servlet-class>com.sdzee.servlets.DownloadController</servlet-class>
		<init-param>
			<param-name>path</param-name>
			<param-value>/tmp/sdzee/files/</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>CustomerController</servlet-name>
		<url-pattern>/createCustomer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrderController</servlet-name>
		<url-pattern>/createOrder</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomersListController</servlet-name>
		<url-pattern>/listCustomers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrdersListController</servlet-name>
		<url-pattern>/listOrders</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomerDeleteController</servlet-name>
		<url-pattern>/deleteCustomer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrderDeleteController</servlet-name>
		<url-pattern>/deleteOrder</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadController</servlet-name>
		<url-pattern>/files/*</url-pattern>
	</servlet-mapping>

</web-app>
